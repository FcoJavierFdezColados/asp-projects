@{
}

<h1>Lista de Cursos</h1>

<div class="row"><a class="btn btn-primary" asp-action="Create">Crear Nuevo Curso</a></div>

<form method="GET">
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col">
                <select name="orden" class="form-select" >
                        @if (ViewData["orden"].ToString() == "asc")
                        {
                            <option value="asc" selected>Ascendente</option>
                            <option value="desc">Descendente</option>
                        }
                        else
                        {
                            <option value="asc">Ascendente</option>
                            <option value="desc" selected>Descendente</option>
                        }
                        </
                        <select>
                
            </div>
            <div name="filtro" class="col">
                <div class="mt-3" >
                    
                    <input value="@ViewData["filtro"]" type="text" class="form-control" name="filtro" placeholder="Buscar por nombre" />
                </div>
            </div>
        </div>
        <div class="row offset-6 mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
    <th>
        Nombre
    </th>
    <th></th>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Cursos" asp-action="Details" asp-route-id ="@item.Id">@Html.DisplayFor(modelItem => item.Nombre)</a>
                </td>
                <td>
                    Opciones
                </td>
            </tr>

        }

    </tbody>

</table>