@model PruebasMVC.Models.Curso
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Borrar Curso";
}



<h1>Borrar Curso</h1>

<div class="row mt-3"><a class="btn btn-info" asp-action="Index">Volver a la lista de cursos</a></div>

<h3>¿Estás seguro de querer borrar el curso?</h3>

<div class="mt-3">
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(Model => Model.Nombre)
        </dd>
    </dl>


    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
